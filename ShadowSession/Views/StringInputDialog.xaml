<mah:MetroWindow x:Class="ShadowSession.Views.StringInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowSession.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModels="clr-namespace:ShadowSession.ViewModels"
        mc:Ignorable="d"
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ShowTitleBar="False"
        ResizeMode="NoResize"
        IsWindowDraggable="False"
        d:DataContext="{d:DesignInstance viewModels:StringInputDialogViewModel, IsDesignTimeCreatable=False}">

    <Grid HorizontalAlignment="Center" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Label Content="{Binding Label}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" />
            <TextBox Width="250" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Left" KeyDown="OnTextBoxKeyDown" Margin="0,0,0,30"/>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="_Save" Command="{Binding SaveCommand}" Width="80" Margin="0,0,10,0" />
                <Button Content="_Cancel" Command="{Binding CancelCommand}" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
